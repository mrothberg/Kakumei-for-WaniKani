<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="64dp"
    android:background="@android:color/white"
    android:minHeight="64dp"
    android:minWidth="250dp">

    <RelativeLayout
        android:id="@+id/item_critical_grid_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="64dp"
        android:minWidth="250dp">

        <View
            android:id="@+id/item_critical_type"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/oval_disabled" />

        <TextView
            android:id="@+id/item_critical_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="48dp"
            android:text="サンプル"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/text_gray" />

        <ImageView
            android:id="@+id/item_critical_character_image"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:paddingBottom="10dp"
            android:paddingLeft="18dp"
            android:paddingRight="14dp"
            android:paddingTop="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_critical_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_gray"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="@color/text_gray"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="@color/text_gray"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>