<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_drawer_item_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/navigation_item_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:tint="@color/text_gray"
            tools:src="@drawable/ic_dashboard_black_24dp" />

        <TextView
            android:id="@+id/navigation_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="36dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_gray"
            android:textSize="14sp"
            tools:text="Dashboard" />
    </LinearLayout>
</LinearLayout>